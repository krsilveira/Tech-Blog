<div class="row">
  <div class="col-auto">
    <h1>Your Dashboard</h1>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form update-blog-form" update-id="{{id}}">
      <div class="form-group">
        <label for="blog-title">Title:</label>
        <input class="form-input" type="text" id="blog-title" 
        name="blog-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="blog-desc">Description:</label>
        <textarea class="form-input" rows="5" id="blog-desc" 
        name="blog-desc">{{description}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" 
        >Update</button>
      </div>
    </form>
  </div>

</div>

<script src="../js/update.js"></script>
