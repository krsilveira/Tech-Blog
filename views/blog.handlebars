<div>
  <div>
    <h1>{{title}}</h1>
  </div>
  <div class="col-auto">
    <div>
      <h2>{{description}}</h2>
      <p class="fs-3">Posted by {{user.name}} on {{format_date date_posted}}</p>
    </div>     
    {{#if my_blog_post}}   
      <a href="/update/{{id}}" class="btn btn-primary">UPDATE POST</a>
      <button type="button" class="btn btn-sm btn-danger" delete-id="{{id}}">DELETE</button>
    {{/if}}
  </div>
</div>
{{#each comments as |comment| }}
<div class="row mb-4 blog">
  <div class="col-md-8">
    <p class="fs-2 lh-sm">{{comment.text}}</p>
  </div>
  <div class="col-md-4">
    <p class="fst-italic">{{comment.poster}}, {{format_date comment.date_posted}}</p>
  </div>
</div>
{{/each}}


<br>
<div class="row mt-4">
  <div class="col-md-6">
    <form class="form new-comment-form" data-num="{{id}}">
      <div class="form-group">
        <label for="comment-text">Comment:</label>
        <input class="form-input" type="text" id="comment-text" name="comment-text" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

</div>

<script src="../js/blog.js"></script>

